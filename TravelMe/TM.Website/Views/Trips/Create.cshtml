@model TM.Infrastructure.Messaging.Requests.TripRequests.TripModel

@{
    ViewBag.Title = "Create Trip";
}

<h2>Create Trip</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="Destination" class="control-label"></label>
        <input asp-for="Destination" class="form-control" />
        <span asp-validation-for="Destination" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Price" class="control-label"></label>
        <input asp-for="Price" class="form-control"/>
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="DateOfDeparture" class="control-label"></label>
        <input asp-for="DateOfDeparture" class="form-control" type="date" />
        <span asp-validation-for="DateOfDeparture" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="DateOfReturn" class="control-label"></label>
        <input asp-for="DateOfReturn" class="form-control" type="date" />
        <span asp-validation-for="DateOfReturn" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Seats" class="control-label"></label>
        <input asp-for="Seats" class="form-control" />
        <span asp-validation-for="Seats" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description" class="control-label"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Create" class="btn btn-primary" />
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
